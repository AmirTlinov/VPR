{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VPR",
  "version": "0.1.0",
  "identifier": "com.vpr.client",
  "build": {
    "frontendDist": "frontend",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VPR - Stealth VPN",
        "width": 420,
        "height": 720,
        "minWidth": 400,
        "minHeight": 680,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
