#!/bin/bash
# VPR Pre-commit Hook
# Runs cargo fmt check and clippy before commit
#
# Install: git config core.hooksPath .githooks
# Or use pre-commit framework: pip install pre-commit && pre-commit install

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check if Rust files were modified
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.rs$' || true)

if [ -z "$RUST_FILES" ]; then
    echo -e "${GREEN}No Rust files staged, skipping Rust checks${NC}"
else
    # Format check
    echo -e "${YELLOW}Checking formatting...${NC}"
    if ! cargo fmt --all -- --check; then
        echo -e "${RED}Formatting issues found!${NC}"
        echo -e "Run '${YELLOW}cargo fmt --all${NC}' to fix them."
        exit 1
    fi
    echo -e "${GREEN}Formatting OK${NC}"

    # Clippy
    echo -e "${YELLOW}Running clippy...${NC}"
    if ! cargo clippy --workspace --all-targets -- -D warnings 2>/dev/null; then
        echo -e "${RED}Clippy found issues!${NC}"
        echo -e "Fix the issues above before committing."
        exit 1
    fi
    echo -e "${GREEN}Clippy OK${NC}"
fi

# Check for secrets
echo -e "${YELLOW}Checking for secrets...${NC}"
STAGED=$(git diff --cached --name-only)

# Patterns that might indicate secrets
SECRET_PATTERNS=(
    '\.pem$'
    '\.key$'
    'id_rsa'
    'id_ed25519'
    '\.env$'
    'credentials'
    'secret'
)

for pattern in "${SECRET_PATTERNS[@]}"; do
    if echo "$STAGED" | grep -qE "$pattern"; then
        echo -e "${RED}WARNING: Potentially sensitive file detected: $(echo "$STAGED" | grep -E "$pattern")${NC}"
        echo -e "If this is intentional, use: git commit --no-verify"
        exit 1
    fi
done
echo -e "${GREEN}No secrets detected${NC}"

echo -e "${GREEN}All pre-commit checks passed!${NC}"
