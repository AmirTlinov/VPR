[Unit]
Description=VPR DoH/DoQ/ODoH gateway
After=network.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/doh-gateway --config /etc/vpr/doh.toml
Restart=on-failure
RestartSec=2s
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
LimitNOFILE=1048576

[Install]
WantedBy=multi-user.target
